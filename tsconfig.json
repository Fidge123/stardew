{
  "compilerOptions": {
    "target": "ES2017",
    "module": "es6",
    "outDir": "./dist",
    "lib": [
      "dom",
      "es2017"
    ],
    "removeComments": true,
    "sourceMap": true,
    "sourceRoot": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": [
    "src/*.ts"
  ]
}
